<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mahmouddarwish.githubusers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GitHubUsersApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_github"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_github_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="m">
        <activity
            android:name="com.mahmouddarwish.githubusers.screens.favorites.FavoritesActivity"
            android:exported="true"
            android:label="@string/title_activity_favorites"
            android:theme="@style/Theme.GithubUsers.NoActionBar" />
        <activity
            android:name=".screens.details.DetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.GithubUsers.NoActionBar" />
        <activity
            android:name=".screens.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>